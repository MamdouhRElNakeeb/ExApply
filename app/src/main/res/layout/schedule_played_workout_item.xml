<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/saved_event_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/saved_events_selector"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/saved_event_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/saved_event_imageView"
        android:layout_toEndOf="@id/saved_event_imageView"
        android:ellipsize="end"
        android:text="Workout 1"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/saved_event_about_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#707070"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/saved_event_imageView"
        android:layout_toEndOf="@id/saved_event_imageView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/saved_event_title_textView"
        android:layout_alignStart="@id/saved_event_title_textView"
        android:layout_alignLeft="@+id/saved_event_title_textView"/>

    <View
        android:id="@+id/saved_event_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_marginRight="128dp"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>